{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "background": "#254CF8",
                    "foreground": "#FCDCF8",
                    // "leading_diamond": "\u256d\u2500\ue0b2",
                    "leading_diamond": "\u256d\u2500",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "alpine": "\uf300",
                        "arch": "\uf303",
                        "centos": "\uf304",
                        "debian": "\uf306",
                        "elementary": "\uf309",
                        "fedora": "\uf30a",
                        "gentoo": "\uf30d",
                        "linux": "\ue712",
                        "macos": "\ue711",
                        "manjaro": "\uf312",
                        "mint": "\uf30f",
                        "opensuse": "\uf314",
                        "raspbian": "\uf315",
                        "ubuntu": "\uf31c",
                        "windows": "\ue70f"
                    },
                    "style": "diamond",
                    "template": " {{ if .WSL }}\ue712 on {{ end }}{{ .Icon }} ",
                    "type": "os"
                },
                {
                    "background": "#f8ec42",
                    "foreground": "#080808",
                    "style": "diamond",
                    "template": " \uf489 {{ .Name }} ",
                    "type": "shell"
                },
                {
                    "background": "#B84A0A",
                    "foreground": "#FFFFFF",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "template": " \udb81\udf70 {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#180b85",
                    "foreground": "#43CCEA",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FF{{ end }}"
                    ],
                    "properties": {
                        "branch_max_length": 25,
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "trailing_diamond": "\ue0b4",
                    "type": "git"
                },
                // {
                //     "background": "#54EEF3",
                //     "foreground": "#1B0D57",
                //     "background_templates": ["{{ if gt .Code 0 }}#f00{{ end }}"],
                //     "powerline_symbol": "\ue0b0",
                //     "properties": {
                //         "always_enabled": true
                //     },
                //     "style": "powerline",
                //     "template": " {{ if gt .Code 0 }}\uf421 \uf119{{ else }}\uf469 \u2665{{ end }} ",
                //     "type": "status"
                // }
                {
                    "background": "#0f0",
                    "foreground": "#474358",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#f00{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "trailing_diamond": "\ue0c6",
                    "template": " {{ if gt .Code 0 }}\uf421 \uf119 {{ else }}\uf469 \u2665 {{ end }} ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#81ff91",
                    "style": "diamond",
                    "template": "<#cc7eda> \u007C </><#7eb8da>RAM:</> {{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1000000000.0) }}/{{ (div .PhysicalTotalMemory 1000000000.0) }}GB",
                    "type": "sysinfo"
                },
                {
                    "foreground": "#81ff91",
                    "properties": {
                        "fetch_version": true
                    },
                    "style": "powerline",
                    "template": "<#cc7eda> \u007C </><#7eb8da>node:</> {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}",
                    "type": "node"
                },
                {
                    "type": "php",
                    "style": "powerline",
                    "foreground": "#81ff91",
                    "template": "<#cc7eda> \u007C </><#7eb8da>\ue73d</> {{ .Full }}"
                },
                // {
                //     "type": "npm",
                //     "style": "powerline",
                //     "foreground": "#81ff91",
                //     "template": "<#cc7eda> \u007C </><#7eb8da>npm:</> {{ .Full }}"
                // },
                {
                    "type": "sysinfo",
                    "style": "powerline",
                    "foreground": "#81ff91",
                    "template": "<> </>"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#0067b8",
                    "style": "plain",
                    "template": "\u2570\u2500",
                    "type": "text"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "style": "plain",
                    "foreground": "#bbf",
                    "properties": {
                        "style": "austin",
                        "threshold": 150
                    },
                    "template": "⌛ {{ .FormattedMs }} ",
                    "type": "executiontime"
                },
                {
                    "style": "plain",
                    "foreground": "#bbf",
                    "properties": {
                        "time_format": "15:04 Monday"
                    },
                    "template": "⌚ {{ .CurrentDate | date .Format }} ",
                    "type": "time"
                }
            ],
            "type": "rprompt"
        }
    ],
    "final_space": true,
    "version": 2
}
